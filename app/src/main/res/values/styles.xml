<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme_Load" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary_theme</item>
        <item name="colorPrimaryDark">@color/colorPrimary_theme</item>
        <item name="colorAccent">@color/colorAccent_theme</item>
    </style>
    <style name="FloatingActionButton_style" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary_theme</item>
        <item name="colorPrimaryDark">@color/colorPrimary_theme</item>
        <item name="colorAccent">@color/colorPrimary_theme</item>
    </style>


    <style name="AppTheme.NoActionBar">

        <item name="windowActionBar">false</item>

        <item name="windowNoTitle">true</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="MyToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item>
    </style>

    <style name="AppTheme_Load.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme_Load.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
    <style name="ToolbarPopupTheme" parent="ThemeOverlay.AppCompat.Light"><!--白色menu面板-->
        <item name="android:background">@color/white</item>
    </style>
</resources>
